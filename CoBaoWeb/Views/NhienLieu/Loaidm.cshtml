@model CoBaoWeb.Models.TTLoaidm
@{
    ViewData["Title"] = "NL Loại dầu mỡ";
    Layout = "~/Views/Shared/_LayoutTable.cshtml";
}
<main>
    <!-- Begin Page Content -->
    <div class="container-fluid">
        <form method="post" asp-controller="NhienLieu" asp-action="Loaidm">
            <!-- DataTales Example -->
            <div class="card shadow mb-4">
                <div class="card-header py-3">
                    <div class="col-lg-12">
                        <div class="row">                          
                            <div class="col-lg-10">
                                <h6 class="m-0 font-weight-bold text-primary">Chọn loại dầu mỡ</h6>
                                <input asp-for="Loaidmtt" type="text" class="form-control form-control-user" id="txtLoaiDM" placeholder="Nhập loại dầu mỡ">
                            </div>
                            <div class="col-lg-1">
                                <h6 class="m-0 font-weight-bold text-primary">Ấn nút tt</h6>
                                <button type="submit" class="btn btn-outline-primary">Tra tìm</button>
                            </div>
                            <div class="col-lg-1">
                                <h6 class="m-0 font-weight-bold text-primary">Ấn nút Excel</h6>
                                <button type="submit" class="btn btn-outline-primary" method="post" asp-controller="NhienLieu" asp-action="ExcelReport_Loaidm">Xuất Excel</button>
                            </div>                          
                        </div>
                    </div>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        @if (Model.DMLoaiDauMo != null)
                        {
                            @if (Model.DMLoaiDauMo.Count() > 0)
                            {                              
                                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0" style="color:blue">
                                    <thead>
                                        <tr>

                                            <th>
                                                Mã dầu mỡ
                                            </th>
                                            <th>
                                                Tên dầu mỡ
                                            </th>
                                            <th>
                                                Đơn vị tính
                                            </th>
                                            <th>
                                                Trạng thái
                                            </th>                                            
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in Model.DMLoaiDauMo)
                                        {
                                        <tr>
                                            <td align="center">
                                                @Html.DisplayFor(modelItem => item.ID)
                                            </td>
                                            <td style="min-width:250px">
                                                @Html.DisplayFor(modelItem => item.LoaiDauMo)
                                            </td>
                                            <td align="center" style="min-width:90px">
                                                @Html.DisplayFor(modelItem => item.DonViTinh)
                                            </td>                                           
                                            <td align="center">
                                                @Html.DisplayFor(modelItem => item.Active)
                                            </td>
                                        </tr>
                                        }
                                    </tbody>
                                </table>
                            }
                        }
                    </div>
                </div>               
            </div>
        </form>
    </div>
   
</main>
