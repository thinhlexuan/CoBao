@model CoBaoWeb.Models.NL_PhieuNhap
@{
    ViewData["Title"] = "NL Phiếu nhập ct";
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">
    <title>Cơ báo - @ViewData["Title"]</title>
    <!-- Custom fonts for this template-->
    <link href="/vendor/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css">
    <link href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i"
          rel="stylesheet">
    <!-- Custom styles for this template-->
    <link href="/css/sb-admin-2.min.css" rel="stylesheet">
    <!-- Custom styles for this page -->
    @*<link href="/vendor/datatables/dataTables.bootstrap4.min.css" rel="stylesheet">*@
</head>

<body id="page-top">
    <!-- Page Wrapper -->
    <div id="wrapper">
        <!-- Content Wrapper -->
        <div id="content-wrapper" class="d-flex flex-column">           
                <!-- Topbar -->
                @await Html.PartialAsync("/Views/Shared/_Topbar.cshtml")                
                <!-- Body Content -->
            <div class="container-fluid">
                <form method="post" asp-controller="NhienLieu" asp-action="Phieunhapct">
                    <div class="card shadow mb-4">
                        <div class="card-header py-3">
                            <div class="col-lg-12">
                                <div class="row" style="min-height:70px">
                                    <div class="col-lg-2">
                                        <h6 class="m-0 font-weight-bold text-primary">Phiếu nhập ID</h6>
                                        <input asp-for="PhieuNhapID" type="text" class="form-control form-control-user" id="txtPhieuNhapID" placeholder="Nhập id" readonly>
                                    </div>
                                    <div class="col-lg-6">
                                        <h6 class="m-0 font-weight-bold text-primary">Loại phiếu nhập</h6>
                                        <input asp-for="LoaiPhieu" type="text" class="form-control form-control-user" id="txtLoaiPhieu" placeholder="Nhập loại phiếu" readonly>
                                    </div>
                                    <div class="col-lg-2">
                                        <h6 class="m-0 font-weight-bold text-primary">Ngày nhập</h6>
                                        @Html.TextBoxFor(Model => Model.NgayNhap, "{0:yyyy-MM-dd}", new { @class = "form-control", @type = "date", @readonly = "readonly" })
                                    </div>
                                    <div class="col-lg-2">
                                        <h6 class="m-0 font-weight-bold text-primary">Giờ nhập</h6>
                                        @Html.TextBoxFor(Model => Model.NgayNhap, "{0:HH:mm}", new { @class = "form-control", @type = "time", @readonly = "readonly" })
                                    </div>
                                </div>
                                <div class="row" style="min-height:70px">
                                    <div class="col-lg-1">
                                        <h6 class="m-0 font-weight-bold text-primary">Mã trạm</h6>
                                        <input asp-for="MaTramNL" type="text" class="form-control form-control-user" id="txtMaTram" placeholder="Nhập mã trạm" readonly>
                                    </div>
                                    <div class="col-lg-2">
                                        <h6 class="m-0 font-weight-bold text-primary">Tên trạm nl</h6>
                                        <input asp-for="TenTramNL" type="text" class="form-control form-control-user" id="txtTenTram" placeholder="Nhập tên trạm" readonly>
                                    </div>
                                    <div class="col-lg-4">
                                        <h6 class="m-0 font-weight-bold text-primary">Người giao</h6>
                                        <input asp-for="NguoiGiao" type="text" class="form-control form-control-user" id="txtNguoiGiao" placeholder="Nhập người giao" readonly>
                                    </div>
                                    <div class="col-lg-1">
                                        <h6 class="m-0 font-weight-bold text-primary">Mã ncc</h6>
                                        <input asp-for="MaNCC" type="text" class="form-control form-control-user" id="txtMaNCC" placeholder="Nhập mã ncc" readonly>
                                    </div>
                                    <div class="col-lg-4">
                                        <h6 class="m-0 font-weight-bold text-primary">Tên nhà cc</h6>
                                        <input asp-for="TenNCC" type="text" class="form-control form-control-user" id="txtTenNCC" placeholder="Nhập tên nhà cc" readonly>
                                    </div>
                                </div>
                                <div class="row" style="min-height:70px">
                                    <div class="col-lg-1">
                                        <h6 class="m-0 font-weight-bold text-primary">Mã hđ</h6>
                                        <input asp-for="MaHopDong" type="text" class="form-control form-control-user" id="txtMaHD" placeholder="Nhập mã hđ" readonly>
                                    </div>
                                    <div class="col-lg-3">
                                        <h6 class="m-0 font-weight-bold text-primary">Tên hợp đồng</h6>
                                        <input asp-for="TenHopDong" type="text" class="form-control form-control-user" id="txtTenHD" placeholder="Nhập tên hợp đồng" readonly>
                                    </div>
                                    <div class="col-lg-2">
                                        <h6 class="m-0 font-weight-bold text-primary">Số hóa đơn</h6>
                                        <input asp-for="SoHoaDon" type="text" class="form-control form-control-user" id="txtSoHD" placeholder="Nhập số hóa đơn" readonly>
                                    </div>
                                    <div class="col-lg-2">
                                        <h6 class="m-0 font-weight-bold text-primary">Ngày hóa đơn</h6>
                                        @Html.TextBoxFor(Model => Model.NgayHoaDon, "{0:yyyy-MM-dd}", new { @class = "form-control", @type = "date", @readonly = "readonly" })
                                    </div>
                                    <div class="col-lg-2">
                                        <h6 class="m-0 font-weight-bold text-primary">Tỷ lệ</h6>
                                        <input asp-for="TyLe" type="text" class="form-control form-control-user" id="txtTyLe" placeholder="Nhập tỷ lệ" readonly>
                                    </div>
                                    <div class="col-lg-2">
                                        <h6 class="m-0 font-weight-bold text-primary">Vat</h6>
                                        <input asp-for="VAT" type="text" class="form-control form-control-user" id="txtVat" placeholder="Nhập vat" readonly>
                                    </div>
                                </div>
                                <div class="row" style="min-height:70px">
                                    <div class="col-lg-12">
                                        <h6 class="m-0 font-weight-bold text-primary">Lý do nhập</h6>
                                        <input asp-for="LyDo" type="text" class="form-control form-control-user" id="txtLyDo" placeholder="Nhập Lý do nhập" readonly>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="card-body">
                            <div class="table-responsive">
                                @if (Model.NL_PhieuNhapCTs != null)
                                {
                                    @if (Model.NL_PhieuNhapCTs.Count() > 0)
                                    {
                                        <h6 class="m-0 font-weight-bold text-primary">Tổng tiền phiếu nhập: @Model.NL_PhieuNhapCTs.Sum(x=>x.ThanhTien).ToString("N0") VNĐ</h6>
                                        <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0" style="color:blue">
                                            <thead>
                                                <tr>
                                                    <th>
                                                        Mã dm
                                                    </th>
                                                    <th>
                                                        Tên dầu mỡ
                                                    </th>
                                                    <th>
                                                        Đơn vị
                                                    </th>
                                                    <th>
                                                        Nhiệt độ
                                                    </th>
                                                    <th>
                                                        Tỷ trọng
                                                    </th>
                                                    <th>
                                                        VCF
                                                    </th>
                                                    <th>
                                                        Số lượng
                                                    </th>
                                                    <th>
                                                        Số lượng vcf
                                                    </th>
                                                    <th>
                                                        Còn lại
                                                    </th>
                                                    <th>
                                                        Đơn giá
                                                    </th>
                                                    <th>
                                                        Tỷ lệ
                                                    </th>
                                                    <th>
                                                        Vat
                                                    </th>
                                                    <th>
                                                        Thành tiền
                                                    </th>                                                    
                                                </tr>
                                            </thead>
                                            <tbody>
                                                @foreach (var item in Model.NL_PhieuNhapCTs)
                                                {
                                                <tr>
                                                    <td align="center">
                                                        @Html.DisplayFor(modelItem => item.MaDauMo)
                                                    </td>
                                                    <td style="min-width:250px">
                                                        @Html.DisplayFor(modelItem => item.TenDauMo)
                                                    </td>
                                                    <td align="center">
                                                        @Html.DisplayFor(modelItem => item.DonViTinh)
                                                    </td>
                                                    <td align="right">
                                                        @if (item.NhietDo != 0)@Html.DisplayFor(modelItem => item.NhietDo) else @Html.Display("--")
                                                    </td>
                                                    <td align="right">
                                                        @if (item.TyTrong != 0)@Html.DisplayFor(modelItem => item.TyTrong) else @Html.Display("--")
                                                    </td>
                                                    <td align="right">
                                                        @if (item.VCF != 0)@Html.DisplayFor(modelItem => item.VCF) else @Html.Display("--")
                                                    </td>
                                                    <td align="right">
                                                        @if (item.SoLuong != 0)@Html.DisplayFor(modelItem => item.SoLuong) else @Html.Display("--")
                                                    </td>
                                                    <td align="right">
                                                        @if (item.SoLuongVCF != 0)@Html.DisplayFor(modelItem => item.SoLuongVCF) else @Html.Display("--")
                                                    </td>
                                                    <td align="right">
                                                        @if (item.ConLai != 0)@Html.DisplayFor(modelItem => item.ConLai) else @Html.Display("--")
                                                    </td>
                                                    <td align="right">
                                                        @if (item.DonGia != 0)@Html.DisplayFor(modelItem => item.DonGia) else @Html.Display("--")
                                                    </td>
                                                    <td align="right">
                                                        @if (item.TyLe != 0)@Html.DisplayFor(modelItem => item.TyLe) else @Html.Display("--")
                                                    </td>
                                                    <td align="right">
                                                        @if (item.Vat != 0)@Html.DisplayFor(modelItem => item.Vat) else @Html.Display("--")
                                                    </td>
                                                    <td align="right">
                                                        @if (item.ThanhTien != 0)@Html.DisplayFor(modelItem => item.ThanhTien) else @Html.Display("--")
                                                    </td>
                                                </tr>
                                                }
                                            </tbody>
                                        </table>
                                    }                                   
                                  }
                             </div>
                        </div>
                        <!-- Footer-->
                        <div class="card-footer py-3">
                            <div class="col-lg-12">
                                <div class="row">
                                    <div class="col-lg-4">
                                    </div>
                                    <div class="col-lg-1">
                                        <button type="submit" class="btn btn-outline-primary" method="post" asp-controller="NhienLieu" asp-action="PdfReport_Phieunhapct">Xuất Pdf</button>
                                    </div>
                                    <div class="col-lg-1">
                                        <button type="submit" class="btn btn-outline-primary" method="post" asp-controller="NhienLieu" asp-action="ExcelReport_Phieunhapct">Xuất Excel</button>
                                    </div>
                                    <div class="col-lg-1">
                                        <button type="submit" class="btn btn-outline-primary" method="post" asp-controller="NhienLieu" asp-action="WordReport_Phieunhapct">Xuất Word</button>
                                    </div>
                                    <div class="col-lg-1">
                                        <button type="submit" class="btn btn-outline-primary" method="post" asp-controller="NhienLieu" asp-action="HtmlReport_Phieunhapct">Xuất Html</button>
                                    </div>
                                    <div class="col-lg-4">
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </form>
                </div>
                <!-- Footer -->
                @await Html.PartialAsync("/Views/Shared/_Footer.cshtml")
            </div>
    </div>
            <!-- Bootstrap core JavaScript-->
            <script src="/vendor/jquery/jquery.min.js"></script>
            <script src="/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>

            <!-- Core plugin JavaScript-->
            <script src="/vendor/jquery-easing/jquery.easing.min.js"></script>

            <!-- Custom scripts for all pages-->
            <script src="/js/sb-admin-2.min.js"></script>

            <!-- Page level plugins -->
            @*<script src="/vendor/datatables/jquery.dataTables.min.js"></script>
            <script src="/vendor/datatables/dataTables.bootstrap4.min.js"></script>*@

            <!-- Page level custom scripts -->
            @*<script src="/js/demo/datatables-demo.js"></script>*@

</body>
</html>